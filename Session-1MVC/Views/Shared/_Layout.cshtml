<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

</head>
<body>

    @*Start Header*@
    <center>
        <div class="m-5">
            <a href="/Home/Index" class="btn btn-primary">Home</a>
            <a href="/Home/AboutUs" class="btn btn-success">About Us</a>
            <a href="/Home/ContactUs" class="btn btn-danger">Contact US</a>
            <a href="/Home/Privacy" class="btn btn-warning">Privacy</a>
        </div>
    </center>

    @*End Header*@



    <div>
        @RenderBody()
    </div>


    @*Start Footer*@
    <center>
        <p m-5>
            Copyrights &cong; Route@DateTime.Now.Year
        </p>
    </center>
    @*End Footer*@
</body>
</html>
